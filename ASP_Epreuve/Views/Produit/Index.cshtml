@model IEnumerable<ASP_Epreuve.Models.ProduitListItemViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>E-shop</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<div class=" card-body">
        @using (Html.BeginForm("SearchNomProduit", "Produit", FormMethod.Get))
        {
            <div class="input-group mb-3">
                <input type="text" class="form-control" name="searchString">
                <div class="input-group-append">
                    <button type="submit" class="btn btn-primary">Recherche par nom</button>
                </div>
            </div>
        }    
</div>


<div class="card-body">
    @using (Html.BeginForm("SearchEcoscore", "Produit", FormMethod.Get))
    {
        <div class="form-group">
            
            <select class="form-control" id="ecoscore" name="ecoscore">
                @foreach (var ecoscore in Enum.GetValues(typeof(Ecoscores)))
                {
                    <option value="@ecoscore">@ecoscore</option>
                }
            </select>
        </div>
        <button type="submit" class="btn btn-primary">Recherche par ecoscore</button>
    }
</div>


<hr />
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prix)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ecoscore)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Categorie)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Prix)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ecoscore)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Categorie)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.Id_Produit }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id_Produit }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id_Produit })
            </td>
        </tr>
}
    </tbody>
</table>
