@model ASP_Epreuve.Models.ProduitDetailViewModel
@inject Shared_epreuve.Repositories.IMediaRepository<BLL_Epreuve.Entities.Media> mediaRepository

@{
    ViewData["Title"] = "Details";
}

<div>
    <h4>@Model.Nom</h4>
    <hr />
    <dl class="row">
        
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nom)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nom)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Prix)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Prix)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Ecoscore)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Ecoscore)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Categorie)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Categorie)
        </dd>

        <dt class="col-sm-2">
            Médias :
        </dt>
        <dd class="col-sm-10">
            @foreach (var media in mediaRepository.Get())
            {
                if (Model.Id_Produit == media.Id_Produit)
                {
                    <img src="~/Assets/imgs/@media.ImageUrl" width="100" height="150" />
                }
            }
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id_Produit }) |
    <a asp-action="Index">Back to List</a>
</div>
